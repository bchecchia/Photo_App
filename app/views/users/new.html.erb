
  <h1 style="text-align: center">Welcome to the sign up page </h1>
  <div style="margin-left: 40%">
    <%= form_for @user do |f| %>
        
        <div style="width: 40%" class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
        </div>

        <div style="width: 40%" class="form-group">
        <%= f.label :username %>
        <br>
        <%= f.text_field :username, placeholder: "Username", autofocus: true, class: "form-control" %>
        
        </div>

        <div style="width: 40%" class="form-group">
        <%= f.label :password %>
        <br>
        <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
        
        </div>

        <div style="width: 40%" class="form-group">
        <%= f.label :password_confirmation %>
        <br>
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control" %>
        <br>
        </div>

        <div class="actions">
        <%= f.submit "Create Account", class: "btn btn-primary" %>
        </div>

    <% end %>
  </div>

  <nav>
    <div class = "footer">
      <%= link_to 'About Page', about_path %>
    </div>
  </nav>