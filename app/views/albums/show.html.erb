<html>
<head>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>

  <script>
    $(document).ready(function(){
      $('.slider').bxSlider({
        mode: 'fade',
        captions: true,
        adaptiveHeight: true,
        slideWidth: 500
     });    });
  </script>
<style>
.bx-wrapper {
    margin: 0 auto;
}
</style>
</head>
<body>
<br>
  <div style="margin: auto">
  <h1 style="text-align: center; color: blue"><%= @album.title %></h1>
    <div class="slider">
          <%(0...@album.images.count).each do |image| %>
            <div style="width: 400px; height: 400px;">
              <%= image_tag(@album.images[image], style: 'width:100%; height:100%' ) %>
            </div>
          <% end%><br>
    </div>
  </div>
</body>
<nav>
 <div class = "footer">
  
      <div style="margin-left: 70px">

      <%= link_to 'Edit', edit_user_album_path(@current_user, @album) %> |
      <%= link_to 'Back', user_albums_path(@current_user) %>
 
      </div>
  </nav>
</div>
  
</html>

