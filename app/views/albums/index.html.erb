<p id="notice"><%= notice %></p>

<h1 style="text-align: center">Albums</h1>

<div style="margin-left: 40%">
<table>
  <thead>
    <tr>
      <th style="text-align: center">Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <br>
       
        <td><%= link_to 'Show', user_album_path(current_user, album), class: "btn btn-primary"  %></td>
        <td><%= link_to 'Edit', edit_user_album_path(@current_user, album), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', [@current_user, album], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>



<nav>
    <div class = "footer">
    <ul>
      <li><%= link_to 'New Album', new_user_album_path(@current_user) %></li> |
      <li> <%= link_to 'Back', current_user %> </li>
    </div>
  </nav>
