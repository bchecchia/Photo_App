
<h1>Please log in</h1>


<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag "Username" %>
    <br>
    <%= text_field_tag :username, nil, autofocus: true, placeholder: "Username", class: "form-control" %>
    <br>
    </div>
    <div class="form-group">
    <%= label_tag "Password" %>
    <br>
    <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
    <br>
    <br>
    </div>
    <div class="actions">
    <%= submit_tag "Log In", class: "btn btn-primary" %>
    </div>
<% end %>

<nav>
<div class = "footer">
  <%= link_to 'About Page', about_path %>
</div>
</nav>